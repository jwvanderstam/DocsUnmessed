[
  {
    "name": "Archive-Old-Office-Documents",
    "match": {
      "extensions": ["doc", "docx", "xls", "xlsx", "ppt", "pptx"],
      "ageDaysMin": 180
    },
    "target": {
      "location": "OneDrive://03_Tech/99_Archive/Office/",
      "namingTemplate": "StandardDateContextTitle"
    },
    "conflictPolicy": "TimestampSuffix",
    "priority": 300
  },
  {
    "name": "Old-PDF-Manuals",
