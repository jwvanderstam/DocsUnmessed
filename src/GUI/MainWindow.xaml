<Window x:Class="DocsUnmessed.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DocsUnmessed - Document Organization Tool" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border Grid.Column="0" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Logo/Header -->
                <Border Background="#1E1E1E" Padding="20">
                    <StackPanel>
                        <TextBlock Text="📁" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="DocsUnmessed" 
                                  Foreground="White" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="v1.0" 
                                  Foreground="#999" 
                                  FontSize="11" 
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Margin="10,20,10,10">
                    <Button x:Name="DashboardButton" Content="🏠 Dashboard" Click="Dashboard_Click" 
                           Style="{StaticResource NavigationButtonStyle}"/>
                    <Button x:Name="AssessButton" Content="📊 Assess" Click="Assess_Click" 
                           Style="{StaticResource NavigationButtonStyle}"/>
                    <Button x:Name="MigrationButton" Content="🚀 Migration" Click="Migration_Click" 
                           Style="{StaticResource NavigationButtonStyle}"/>
                    <Button x:Name="SettingsButton" Content="⚙️ Settings" Click="Settings_Click" 
                           Style="{StaticResource NavigationButtonStyle}"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel VerticalAlignment="Bottom" Margin="20">
                    <Separator Background="#3F3F46" Margin="0,0,0,15"/>
                    <TextBlock Text="Built with .NET 10" 
                              Foreground="#666" 
                              FontSize="10" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="© 2025" 
                              Foreground="#666" 
                              FontSize="10" 
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Frame x:Name="ContentFrame" 
               Grid.Column="1" 
               NavigationUIVisibility="Hidden"
               Background="#F5F5F5"/>
    </Grid>
</Window>
