<Page x:Class="DocsUnmessed.GUI.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Settings">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Configure application preferences and access documentation" FontSize="14" Foreground="#666" Margin="0,0,0,30"/>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="?? Documentation &amp; Help" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    <TextBlock Text="Access CLI commands and guides" FontSize="14" Foreground="#666" Margin="0,0,0,15"/>
                    
                    <WrapPanel>
                        <Button Content="?? CLI Reference" Command="{Binding OpenCLIReferenceCommand}"
                               Padding="15,10" Margin="0,0,10,10" Background="#0078D4" Foreground="White" BorderThickness="0"/>
                        <Button Content="?? Quick Start Guide" Command="{Binding OpenQuickStartCommand}"
                               Padding="15,10" Margin="0,0,10,10" Background="#107C10" Foreground="White" BorderThickness="0"/>
                        <Button Content="??? Build Guide" Command="{Binding OpenBuildGuideCommand}"
                               Padding="15,10" Margin="0,0,10,10" Background="#8764B8" Foreground="White" BorderThickness="0"/>
                        <Button Content="?? Open Docs Folder" Command="{Binding OpenDocsFolderCommand}"
                               Padding="15,10" Margin="0,0,0,10"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="?? Application Settings" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <CheckBox Content="Enable logging" IsChecked="{Binding EnableLogging}" Margin="0,5"/>
                    <CheckBox Content="Auto-save settings" IsChecked="{Binding AutoSaveSettings}" Margin="0,5"/>
                    <CheckBox Content="Confirm before delete" IsChecked="{Binding ConfirmBeforeDelete}" Margin="0,5"/>
                    
                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="Log Level:" Margin="0,0,0,5"/>
                        <ComboBox SelectedItem="{Binding LogLevel}" FontSize="14" Padding="8">
                            <ComboBoxItem Content="Trace"/>
                            <ComboBoxItem Content="Debug"/>
                            <ComboBoxItem Content="Information" IsSelected="True"/>
                            <ComboBoxItem Content="Warning"/>
                            <ComboBoxItem Content="Error"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="Max Concurrent Operations:" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding MaxConcurrentOperations}" FontSize="14" Padding="8" Width="100" HorizontalAlignment="Left"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Save Settings" Command="{Binding SaveSettingsCommand}"
                               Padding="20,10" Margin="0,0,10,0" Background="#0078D4" Foreground="White" BorderThickness="0"/>
                        <Button Content="Reset to Defaults" Command="{Binding ResetSettingsCommand}"
                               Padding="20,10"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="?? Database Management" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="{Binding DatabasePath}" FontSize="12" Foreground="#666" Margin="0,0,0,15" TextWrapping="Wrap"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Open Database Folder" Command="{Binding OpenDatabaseFolderCommand}"
                               Padding="15,10" Margin="0,0,10,0"/>
                        <Button Content="Clear Cache" Command="{Binding ClearCacheCommand}"
                               Padding="15,10" Margin="0,0,10,0"/>
                        <Button Content="Clear Database" Command="{Binding ClearDatabaseCommand}"
                               Padding="15,10" Background="#D13438" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="?? About" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    <TextBlock FontSize="14">
                        <Run Text="DocsUnmessed" FontWeight="Bold"/>
                        <Run Text=" v1.0"/>
                    </TextBlock>
                    <TextBlock Text="Document Organization Tool for Windows" FontSize="14" Margin="0,5,0,0"/>
                    <TextBlock Text="Built with .NET 10 and WPF" FontSize="12" Foreground="#666" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>