<Page x:Class="DocsUnmessed.GUI.Views.MigrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Migration">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Migration" FontSize="28" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Execute file organization based on scan results" FontSize="14" Foreground="#666" Margin="0,0,0,30"/>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Migration Configuration" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Scan ID:" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding ScanId}" FontSize="14" Padding="8"/>
                            <Button Content="Load Scan" Grid.Column="1" Command="{Binding LoadScanCommand}" 
                                   Padding="15,8" Margin="10,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel>
                        <CheckBox Content="Enable Category Migration" IsChecked="{Binding EnableCategoryMigration}" Margin="0,5"/>
                        <CheckBox Content="Dry Run (Preview Only)" IsChecked="{Binding IsDryRun}" Margin="0,5" FontWeight="SemiBold"/>
                    </StackPanel>

                    <Button Content="Start Migration" Command="{Binding StartMigrationCommand}"
                           IsEnabled="{Binding IsMigrating, Converter={StaticResource InvertBoolConverter}}"
                           Background="#107C10" Foreground="White" FontSize="16" FontWeight="SemiBold"
                           Padding="30,12" Margin="0,20,0,0" HorizontalAlignment="Left" BorderThickness="0"/>
                </StackPanel>
            </Border>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                   Visibility="{Binding IsMigrating, Converter={StaticResource BoolToVisConverter}}">
                <StackPanel>
                    <TextBlock Text="Migration in Progress..." FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    <ProgressBar Value="{Binding MigrationProgress}" Height="8" Margin="0,0,0,10" Maximum="100"/>
                    <TextBlock Text="{Binding MigrationStatus}" FontSize="14" Margin="0,5"/>
                    <TextBlock FontSize="14" Margin="0,10,0,0">
                        <Run Text="Progress: "/>
                        <Run Text="{Binding CompletedOperations, Mode=OneWay}" FontWeight="Bold"/>
                        <Run Text=" / "/>
                        <Run Text="{Binding TotalOperations, Mode=OneWay}" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                   Visibility="{Binding MigrationLog.Count, Converter={StaticResource NullToVisConverter}}">
                <StackPanel>
                    <TextBlock Text="Migration Log" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding MigrationLog}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="12" FontFamily="Consolas" Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="20"
                   Visibility="{Binding HasResults, Converter={StaticResource BoolToVisConverter}}">
                <StackPanel>
                    <TextBlock Text="Migration Results" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    <TextBlock Text="{Binding ResultsSummary}" FontSize="14" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>