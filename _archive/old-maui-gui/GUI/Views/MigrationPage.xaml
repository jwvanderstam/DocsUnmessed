<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DocsUnmessed.GUI.ViewModels"
             x:Class="DocsUnmessed.GUI.Views.MigrationPage"
             x:DataType="vm:MigrationViewModel"
             Title="Migration">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Page Header -->
            <Label Text="Migrate Files" 
                   FontSize="28" 
                   FontAttributes="Bold"/>
            <Label Text="Organize and migrate your files with smart categorization"
                   FontSize="14"
                   TextColor="Gray"
                   Margin="0,0,0,10"/>

            <!-- Configuration Section -->
            <Frame Padding="20" CornerRadius="10" BackgroundColor="#F9F9F9">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Migration Configuration" 
                           FontSize="18" 
                           FontAttributes="Bold"/>

                    <!-- Scan ID -->
                    <Label Text="Scan ID" FontSize="14" FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                        <Entry Grid.Column="0"
                               Text="{Binding ScanId}"
                               Placeholder="Enter scan ID from assessment"
                               FontSize="14"/>
                        <Button Grid.Column="1"
                                Text="Load"
                                Command="{Binding LoadScanCommand}"
                                BackgroundColor="#007bff"
                                TextColor="White"
                                WidthRequest="100"/>
                    </Grid>

                    <!-- Target Directory -->
                    <Label Text="Target Directory" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Entry Text="{Binding TargetDirectory}"
                           Placeholder="Directory for migrated files"
                           FontSize="14"/>

                    <!-- Options -->
                    <Label Text="Migration Options" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0"/>
                    
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding EnableCategorization}"/>
                        <Label Text="Enable smart categorization (organize by file type)" 
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding PreserveStructure}"/>
                        <Label Text="Preserve subdirectory structure" 
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding IsDryRun}"/>
                        <Label Text="Dry-run mode (preview only, no actual changes)" 
                               VerticalOptions="Center"
                               FontSize="14"
                               TextColor="#ffc107"/>
                    </HorizontalStackLayout>

                    <!-- Conflict Resolution -->
                    <Label Text="If file exists:" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Picker ItemsSource="{Binding ConflictOptions}"
                            SelectedItem="{Binding ConflictResolution}"
                            FontSize="14"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Button Grid.Column="0"
                        Text="Preview"
                        Command="{Binding PreviewMigrationCommand}"
                        BackgroundColor="#17a2b8"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="50"/>
                
                <Button Grid.Column="1"
                        Text="Execute Migration"
                        Command="{Binding ExecuteMigrationCommand}"
                        IsEnabled="{Binding IsMigrating, Converter={StaticResource InvertedBoolConverter}}"
                        BackgroundColor="#28a745"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="50"/>
            </Grid>

            <!-- Status -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="#E3F2FD">
                <Label Text="{Binding MigrationStatus}" 
                       FontSize="14"
                       TextColor="#1976d2"/>
            </Frame>

            <!-- Preview Section -->
            <Frame Padding="20" CornerRadius="10" BackgroundColor="#F9F9F9" IsVisible="{Binding HasPreview}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Preview (first 20 items)" 
                           FontSize="18" 
                           FontAttributes="Bold"/>

                    <CollectionView ItemsSource="{Binding PreviewItems}"
                                    MaximumHeightRequest="400">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="0,5" Padding="10" BackgroundColor="White" CornerRadius="5">
                                    <VerticalStackLayout Spacing="5">
                                        <Label Text="{Binding SourcePath}" 
                                               FontSize="12" 
                                               TextColor="Gray"/>
                                        <Label Text="{Binding TargetPath}" 
                                               FontSize="13" 
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding Size}" 
                                               FontSize="11" 
                                               TextColor="Gray"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Progress Section -->
            <Frame Padding="20" CornerRadius="10" BackgroundColor="#F0F0F0" IsVisible="{Binding IsMigrating}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Migration in Progress..." 
                           FontSize="18" 
                           FontAttributes="Bold"/>

                    <ProgressBar Progress="{Binding MigrationProgress, Converter={StaticResource PercentToProgressConverter}}" 
                                 HeightRequest="10"
                                 ProgressColor="#28a745"/>

                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="Processed" FontSize="12" TextColor="Gray"/>
                            <Label Text="{Binding FilesProcessed}" FontSize="20" FontAttributes="Bold"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="Succeeded" FontSize="12" TextColor="Gray"/>
                            <Label Text="{Binding FilesSucceeded}" FontSize="20" FontAttributes="Bold" TextColor="#28a745"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="2" Spacing="5">
                            <Label Text="Failed" FontSize="12" TextColor="Gray"/>
                            <Label Text="{Binding FilesFailed}" FontSize="20" FontAttributes="Bold" TextColor="#dc3545"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Help Text -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="#FFF9C4">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Tips" FontSize="16" FontAttributes="Bold"/>
                    <Label FontSize="13">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="• Always use dry-run mode first to preview&#10;"/>
                                <Span Text="• Categorization creates organized folders&#10;"/>
                                <Span Text="• Rename mode creates unique names for conflicts&#10;"/>
                                <Span Text="• Preserve structure keeps your folder hierarchy"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
