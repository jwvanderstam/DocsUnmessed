<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DocsUnmessed.GUI.ViewModels"
             x:Class="DocsUnmessed.GUI.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Page Header -->
            <Label Text="Settings" 
                   FontSize="28" 
                   FontAttributes="Bold"/>
            <Label Text="Configure DocsUnmessed preferences and defaults"
                   FontSize="14"
                   TextColor="Gray"
                   Margin="0,0,0,10"/>

            <!-- Default Settings -->
            <Frame Padding="20" CornerRadius="10" BackgroundColor="#F9F9F9">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Default Migration Settings" 
                           FontSize="18" 
                           FontAttributes="Bold"/>

                    <Label Text="Target Directory" FontSize="14" FontAttributes="Bold"/>
                    <Entry Text="{Binding DefaultTargetDirectory}"
                           Placeholder="Default target directory"
                           FontSize="14"/>

                    <Label Text="Conflict Resolution" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Picker SelectedItem="{Binding DefaultConflictResolution}"
                            FontSize="14">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>rename</x:String>
                                <x:String>skip</x:String>
                                <x:String>overwrite</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                        <CheckBox IsChecked="{Binding EnableCategorization}"/>
                        <Label Text="Enable categorization by default" 
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding PreserveStructure}"/>
                        <Label Text="Preserve directory structure by default" 
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding UseDefaultExclusions}"/>
                        <Label Text="Use default system directory exclusions" 
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Scan Settings -->
            <Frame Padding="20" CornerRadius="10" BackgroundColor="#F9F9F9">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Scan Settings" 
                           FontSize="18" 
                           FontAttributes="Bold"/>

                    <HorizontalStackLayout Spacing="10">
                        <CheckBox IsChecked="{Binding ComputeHashByDefault}"/>
                        <Label Text="Compute file hashes by default (slower)" 
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Cloud Provider Settings -->
            <Frame Padding="20" CornerRadius="10" BackgroundColor="#F9F9F9">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Cloud Provider Settings" 
                           FontSize="18" 
                           FontAttributes="Bold"/>

                    <Label Text="Max Page Size" FontSize="14" FontAttributes="Bold"/>
                    <Entry Text="{Binding MaxPageSize}"
                           Keyboard="Numeric"
                           Placeholder="200"
                           FontSize="14"/>

                    <Label Text="Upload Chunk Size (KB)" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Entry Text="{Binding UploadChunkSize}"
                           Keyboard="Numeric"
                           Placeholder="320"
                           FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Actions -->
            <Frame Padding="20" CornerRadius="10" BackgroundColor="#F9F9F9">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Actions" 
                           FontSize="18" 
                           FontAttributes="Bold"/>

                    <Button Text="Save Settings"
                            Command="{Binding SaveSettingsCommand}"
                            BackgroundColor="#28a745"
                            TextColor="White"
                            FontSize="16"/>

                    <Button Text="Reset to Defaults"
                            Command="{Binding ResetToDefaultsCommand}"
                            BackgroundColor="#ffc107"
                            TextColor="Black"
                            FontSize="16"/>

                    <Button Text="Clear Cache"
                            Command="{Binding ClearCacheCommand}"
                            BackgroundColor="#17a2b8"
                            TextColor="White"
                            FontSize="16"/>

                    <Button Text="Clear Database"
                            Command="{Binding ClearDatabaseCommand}"
                            BackgroundColor="#dc3545"
                            TextColor="White"
                            FontSize="16"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Status -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="#E3F2FD">
                <Label Text="{Binding SettingsStatus}" 
                       FontSize="14"
                       TextColor="#1976d2"/>
            </Frame>

            <!-- About -->
            <Frame Padding="20" CornerRadius="10" BackgroundColor="#F9F9F9">
                <VerticalStackLayout Spacing="10">
                    <Label Text="About DocsUnmessed" 
                           FontSize="18" 
                           FontAttributes="Bold"/>
                    <Label Text="Version 1.0" FontSize="14"/>
                    <Label Text=".NET 10 | MAUI" FontSize="12" TextColor="Gray"/>
                    <Label Text="Privacy-first file organization tool" FontSize="13" Margin="0,10,0,0"/>
                    <Label Text="© 2025 DocsUnmessed" FontSize="12" TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
